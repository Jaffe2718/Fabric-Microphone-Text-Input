{
    "schemaVersion": 1,
    "id": "mcmti",
    "version": "${version}",
    "name": "Fabric Microphone Text Input Mod",
    "description": "A mod that provides speech recognition input and automatically converts it into text chat messages",
    "authors": [
        "Jaffe2718",
        "IsAvaible"
    ],
    "contact": {
        "homepage": "https://github.com/Jaffe2718",
        "issues": "https://github.com/Jaffe2718/Fabric-Microphone-Text-Input/issues",
        "sources": "https://github.com/Jaffe2718/Fabric-Microphone-Text-Input"
    },
    "license": "MIT",
    "icon": "assets/mcmti/icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [
            "github.jaffe2718.mcmti.client.MicrophoneTextInputClient"
        ],
        "main": [
            "github.jaffe2718.mcmti.MicrophoneTextInputMain"
        ]
    },
    "depends": {
        "fabricloader": ">=0.14.8",
        "fabric": "*",
        "minecraft": "1.19.4",
        "midnightlib": ">=1.2.1",
        "modmenu": ">=6.0.0"
    }
}
